{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"incremental": true,
		"paths": {
			"@/utils/*": ["./utils/*"],
			"@/ui/*": ["./machine-coding-ui/*"],
			"@/sd/*": ["./frontend-system-design/*"]
		}
	},
	"exclude": ["node_modules", "dist", "build"]
}
